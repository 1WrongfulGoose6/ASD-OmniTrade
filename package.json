{
  "name": "omni-trade",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:ci": "next build --no-lint",
    "start": "node server.js",
    "start:next": "next start -H 0.0.0.0",
    "postinstall": "prisma generate",
    "lint": "eslint",
    "lint:ci": "eslint --cache --cache-location .eslintcache",
    "test": "jest",
    "test:ci": "npm run test -- --watchAll=false --reporters=default --reporters=jest-junit",
    "test:coverage": "jest --coverage --watchAll=false --reporters=default --reporters=jest-junit --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ci": "CI=true playwright test --workers=1",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "db:generate": "prisma generate",
    "db:generate:ci": "prisma generate --schema=prisma/schema.ci.prisma",
    "db:push": "prisma db push",
    "db:push:ci": "prisma db push --schema=prisma/schema.ci.prisma",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "node prisma/seed.js",
    "db:test": "node scripts/test-db-connection.js"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@supabase/supabase-js": "^2.58.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "file-saver": "^2.0.5",
    "jest": "^30.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.0",
    "prop-type": "^0.0.1",
    "prop-types": "^15.8.1",
    "react": "19.1.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.1",
    "eslint": "^9.34.0",
    "eslint-config-next": "15.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^30.1.1",
    "jest-junit": "^16.0.0",
    "prisma": "^6.16.3",
    "tailwindcss": "^4",
    "undici": "^6.22.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
